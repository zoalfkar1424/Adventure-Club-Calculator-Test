{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Calculator</h1>
    {{ form_start(form)}}

    <div class="row">
        <div class="col-2">
            {{ form_row(form.firstArgument)}}
        </div>
        <div class="col-2">
            {{ form_row(form.operation)}}
        </div>
        <div class="col-2">
            {{ form_row(form.secondArgument)}}
        </div>
        <div class="col-2" style="margin-top: 3%">
        {{ form_widget(form.calculate)}}
        </div>
        <div class="col-2" style="margin-top: 3%">
            {{ form_widget(form.save)}}
        </div>
        <div class="col-2" style="margin-top: 3%">
            {{ form_widget(form.restore)}}
        </div>
    </div>
        <div class="row" >
            <div class="col-6">
                <p id="expandres" style="background-color:#D0E6DC"></p>
            </div>
        </div>
            {{ form_end(form)}}
    </div>
{%endblock%}